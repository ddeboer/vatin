{
    "name": "ddeboer/vatin",
    "description": "Validate VAT identification numbers",
    "keywords": [ "vat", "tax", "btw", "vies" ],
    "license": "MIT",
    "authors": [
        {
            "name": "David de Boer",
            "email": "david@ddeboer.nl",
            "homepage": "https://github.com/ddeboer"
        },
        {
            "name": "Community contributions",
            "homepage": "https://github.com/ddeboer/vatin/contributors"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0"
    },
    "require-dev": {
        "ext-soap": "*",
        "phpunit/phpunit": "^8.5.21 || ^9.5"
    },
    "suggest": {
        "ext-soap": "Required if you want to check the VAT number via VIES"
    },
    "autoload": {
        "psr-4": {
            "Ddeboer\\Vatin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ddeboer\\Vatin\\Test\\": "tests/"
        }
    }
}
